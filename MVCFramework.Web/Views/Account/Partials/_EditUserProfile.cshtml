@model MVCFramework.Web.Models.UserProfileModel
@using (Ajax.BeginForm("EditUserProfile", "Account", new AjaxOptions()
                                                             {
                                                                 LoadingElementId = "edit-profile-preloader",
                                                                 UpdateTargetId = "profile-container",
                                                                 OnSuccess = "successMessage('User profile saved.')",
                                                             }, new { @class = "form-horizontal" })
    )
{
    <div class="row-fluid form-inline">
        <div class="span2"><i class="icon-user icon-4x img-polaroid"></i></div>
        <div class="span4">
            @Html.LabelFor(m => m.FirstName, "First name")
            @Html.TextBoxFor(m => m.FirstName, new { placeholder = "first name", @class = "input-medium" })

        </div>
        <div class="span4 form-inline">
            @Html.LabelFor(m => m.LastName, "Last name")
            @Html.TextBoxFor(m => m.LastName, new { placeholder = "last name", @class = "input-medium" })
        </div>

    </div>
    <div class="row-fluid">
        <br />
    </div>
    <div class="row-fluid">
        <div><strong>Address</strong></div>
    </div>
    <div class="row-fluid">
        <div class="span6">@Html.TextBoxFor(m => m.Address, new { placeholder = "address", @class = "input-xlarge" })</div>
        <div class="span6">
            @Html.TextBoxFor(m => m.City, new { placeholder = "city", @class = "input-mini" })
            @Html.TextBoxFor(m => m.State, new { placeholder = "state", @class = "input-mini" })
            @Html.TextBoxFor(m => m.Country, new { placeholder = "country", @class = "input-mini" })
            @Html.TextBoxFor(m => m.Zip, new { placeholder = "zip", @class = "input-mini" })
        </div>
    </div>
    <div class="row-fluid">
        <br />
    </div>
    <div class="row-fluid">
        <div><strong>Contact</strong></div>
    </div>
    <div class="row-fluid form-inline">
        <div class="span6">@Html.LabelFor(m => m.Email, "Email") &nbsp; &nbsp; @Html.TextBoxFor(m => m.Email, new { placeholder = "email", @class = "input-large" })</div>
        <div class="span3">@Html.LabelFor(m => m.Phone, "Phone") @Html.TextBoxFor(m => m.Phone, new { placeholder = "phone", @class = "input-small" })</div>
        <div class="span3">@Html.LabelFor(m => m.Mobile, "Mobile") @Html.TextBoxFor(m => m.Mobile, new { placeholder = "mobile", @class = "input-small" })</div>
    </div>
    <div class="row-fluid">
        <br />
    </div>
    <div class="row-fluid">
        <div><strong>Bio</strong></div>
    </div>
    <div class="row-fluid">
        @Html.TextAreaFor(m => m.Description, new { @class = "input-block-level", rows = 4 })
    </div>
    <div class="row-fluid">
        <br />
    </div>
    <div class="row-fluid">
        <div class="pull-right">
            <img id="edit-profile-preloader" src="~/Content/images/loaders/bullets-blue.gif" class="hide" />
            <input type="submit" class="btn-link" value="save" />
            @Html.ActionLink("cancel", "UserProfile", "Account", null, new { @class = "btn btn-link" })
        </div>
    </div>
}