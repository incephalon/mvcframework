@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Internal error";
    Layout = "";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/content/site.css" rel="stylesheet" media="screen" />

</head>
    <body>
         <div class="container">
        <div class="page-header">
            <div class="well">
            <h2>Sorry, an error occurred while processing your request.
            </h2>
            <p><strong>@Model.Exception.Message</strong></p>
        </div>
        </div>
    
    </div>
       
        <script type="text/javascript" src="//use.typekit.net/vpe1ljt.js"></script>
        <script type="text/javascript">try { Typekit.load(); } catch (e) { }</script>
 
    </body>
</html>